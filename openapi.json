{
  "openapi": "3.0.0",
  "info": {
    "title": "File Manager API",
    "description": "API endpoints file manager service documented on swagger",
    "contact": {
      "name": "IPACT Consult",
      "email": "ipactconsult@gmail.com",
      "url": "https://ipactconsult.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://127.0.0.1:7000/",
      "description": "Local server"
    },
    {
      "url": "https://127.0.0.1:7000",
      "description": "Live server"
    }
  ],
  "paths": {
    "/api/upload-single": {
      "post": {
        "description": "Upload single file",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "files": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Response for single file upload",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SingleResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/upload-multiple": {
      "post": {
        "description": "Upload multiple files",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "files[]": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "binary"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Response for multi file upload",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MultiResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/static/{fileName}": {
      "get": {
        "description": "get file by name",
        "parameters": [
          {
            "required": true,
            "name": "fileName",
            "in": "path",
            "schema": {
              "type": "string",
              "format": "utf-8"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "File to send back",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "MultiResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Uploaded"
          },
          "fileNames": {
            "type": "array",
            "items": {
              "type": "string",
              "example": "x.jpeg"
            }
          }
        }
      },
      "SingleResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Uploaded"
          },
          "fileNames": {
            "type": "string",
            "example": "fileName: example.jpeg"
          }
        }
      }
    }
  }
}
